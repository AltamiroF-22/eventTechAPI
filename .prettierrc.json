{
  "useTabs": false,
  "semi": true,
  "singleQuote": true,

  "tabWidth": 2,

  "overrides": [
    {
      "files": ["*.vue"],
      "options": { "tabWidth": 2, "vueIndentScriptAndStyle": true }
    },
    {
      "files": ["*.js", "*.jsx", "*.ts", "*.tsx"],
      "options": { "tabWidth": 2 }
    },
    {
      "files": ["*.java"],
      "options": { "tabWidth": 2 }
    }
  ]
}
